<% layout('layouts/boilerplate') -%>


<div class="row">
    <h1 class="text-center"><%= booking.title %> Details </h1>

    <div class="col-md-6 offset-2">
        <div class="card" style="width: 45rem;">
            <img src="<%= booking.image %> " class="card-img-top" alt="alt">
            <div class="card-body">
              <h5 class="card-title"><%= booking.title %> </h5>
              <small class="card-title text-muted"><%= booking.location %> </small>
              <p class="card-text"><%= booking.description %> </p>
              <h4 class="card-title "><%= booking.price %> MAD /night </h4>
              <br>
            </div>
            <div class="card-body">
                <a href="/bookings/<%= booking._id %>/edit" class="btn card-link btn-info">Edit</a>
               <form class="d-inline" action="/bookings/<%= booking._id %>?_method=DELETE" method="post">
                    <button class="btn card-link btn-danger"> Delete</button>   
                </form>
              </div>
              <div class="card-footer text-muted">
                  2 days ago
              </div>
          </div>
    </div>
</div>

