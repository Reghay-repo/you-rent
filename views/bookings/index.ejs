<% layout('layouts/boilerplate') -%>

<div class="row my-4">
    <h1 class="text-center">All bookings available</h1>

    <div class="col-md-12">
        
    <% for (let booking of bookings) { %>
        <div class="row mb-3">
            <div class="row">
                <div class="col-md-4">
                 <img src="<%= booking.image %>" class="card-img-top img-fluid" alt="...">
                </div>
                <div class="col-md-8">
                 <div class="card-body">
                     <h5 class="card-title"><%= booking.title %> </h5>
                     <small class="card-title text-muted"><%= booking.location %> </small>
                     <p class="card-text"><%= booking.description %> </p>
                     <a href="/bookings/<%= booking._id %> " class="btn btn-primary"><%= booking.title %>  details</a>
                   </div>
                </div>
               </div>
        </div>    
    <% }   %> 

    </div>
</div>